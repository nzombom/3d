#version 460 core

layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aNormal;

uniform vec3 mTranslate;
uniform vec4 mRotate;
uniform vec3 mScale;
uniform vec3 vTranslate;
uniform vec4 vRotate;
uniform mat4 projection;

out vec3 pos;
out vec3 normal;
out vec3 cameraPos;

vec3 rotate(vec3 v, vec4 q) {
	float w = q.w;
	vec3 r = q.xyz;
	return v + cross(r + r, cross(r, v) + w * v);
}

void main() {
	/*vec3 mPos = rotate(aPos * mScale, mRotate) + mTranslate;
	pos = mPos;
	normal = rotate(normalize(aNormal / mScale), mRotate);
	cameraPos = -vTranslate;
	vec3 vPos = rotate(mPos + vTranslate, vRotate);
	gl_Position = projection * vec4(vPos, 1);*/
	gl_Position = vec4(aPos, 1);
}
